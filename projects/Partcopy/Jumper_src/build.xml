<?xml version = "1.0"?>
<project name = "JumperRunner" default = "run" basedir = ".">
  <description>run the bugs </description>
  <property name = "src.dir" location = "src"/>
  <property name = "lib.dir" location = "../lib"/>
  <property name = "class.dir" location = "class"/>
  <path id = "compile.path">
    <fileset dir = "${lib.dir}">
      <include name = "**/*.jar"/>
    </fileset>
  </path>
  
  <target name = "init">
    <delete dir = "${class.dir}"/>
    <mkdir dir = "${class.dir}"/>
    <copy todir="${class.dir}">
      <fileset dir = ".">
	<include name = "**/*.gif"/>
      </fileset>
    </copy>
  </target>
  <target name = "compile" depends = "init">
    <javac srcdir = "${src.dir}" destdir = "${class.dir}/src" classpathref = "compile.path" includeantruntime = "true">
      <compilerarg value="-Xlint:unchecked"/>
    </javac>
  </target>
  <target name = "run" depends = "compile">
    <java classname = "JumperRunner" fork = "true">
      <classpath path = "${class.dir}/src"/>
      <classpath refid = "compile.path"/>
    </java>
  </target>
</project>